.steppage
  .fmarket__logo.logo_left
    = image_tag "/assets/images/SVG/fmarket_logo_red.svg"
  .MemberInformationInput
    .MemberInformationInput__title
      住所入力
    .MemberInformationInput__content
      .MemberInformationInput__content--form
        %form{:action => "#", :method => "post"}
          .form_group
            %label
              郵便番号
            %span.form_require
              必須
            %br/
            %input{:name => "name", :type => "text", :class => "input_default", :placeholder => "郵便番号"}/ 
            %br/
            .form_group
            %label
              都道府県
            %span.form_require
              必須
            %br/
            %input{:name => "name", :type => "text", :class => "input_default", :placeholder => "郵便番号"}/ 
            %br/

            .form_group
            %label
              市区町村
            %span.form_require
              必須
            %br/
            %input{:name => "name", :type => "text", :class => "input_default", :placeholder => "例) 横浜市緑区"}/ 
            %br/

            .form_group
            %label
              番地
            %span.form_require
              必須
            %br/
            %input{:name => "name", :type => "text", :class => "input_default", :placeholder => "例) 青山1-1-1"}/ 
            %br/

            .form_group
            %label
              建物名
            %span.form_require
              任意
            %br/
            %input{:name => "name", :type => "text", :class => "input_default", :placeholder => "例) 柳ビル103"}/ 
            %br/

            .form_group
            %label
              電話
            %span.form_require
              任意
            %br/
            %input{:name => "name", :type => "text", :class => "input_default", :placeholder => "例) 09012345678"}/ 
            %br/

            %button{:type => "submit", :class => "btn_red"}
              次へ進む
