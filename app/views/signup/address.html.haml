-#header部分
%header.user-container
  .user-header
    %h1.user-header__head
      = link_to root_path,class: "user-header__head__link" do
        = image_tag "fmarket_logo_red.svg", alt: "frima"
    %nav.user-header__nav
      %ol.user-header__nav__ol
        %li.through.user-header__nav__ol__progress
          会員情報
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          電話番号認証
          .user-header__nav__ol__progress__li
        %li.active.user-header__nav__ol__progress
          お届け先住所入力
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          支払い方法
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          完了
          .user-header__nav__ol__progress__li
-# 住所、電話番号入力フォーム
.steppage
  .MemberInformationInput
    .MemberInformationInput__title
      住所入力
    .MemberInformationInput__content
      .MemberInformationInput__content--form
        %form{action: "#", method: "post"}

          -# 郵便番号入力
          .form_group
            %label
              郵便番号
            %span.form_require
              必須
            %br/
            %input.input_default{name: "zipcode", type: "number", placeholder: "郵便番号"}
            %br/

            -# 都道府県名入力gem 'active_hash'使用
          .form_group
            %label
              都道府県
            %span.form_require
              必須
            %br/
            %input.input_default{name: "first_address", type: "text", placeholder: "北海道"}
            %br/

            -# 市区町村入力
          .form_group
            %label
              市区町村
            %span.form_require
              必須
            %br/
            %input.input_default{name: "second_address", type: "text", placeholder: "例) 横浜市緑区"}
            %br/

            -# 番地入力
          .form_group
            %label
              番地
            %span.form_require
              必須
            %br/
            %input.input_default{name: "third_address", type: "text", placeholder: "例) 青山1-1-1"}
            %br/


          -# 建物名入力
          .form_group
            %label
              建物名
            %span.form_require.type_Any
              任意
            %br/
            %input.input_default{name: "name", type: "text", placeholder: "例) 柳ビル103"}
            %br/

          -# 電話番号入力
          .form_group
            %label
              電話
            %span.form_require.type_Any
              任意
            %br/
            %input.input_default{name: "phone_number", type: "number", placeholder: "例) 09012345678"}
            %br/

            -# 送信ボタン
            %button{type: "submit", class: "btn_red"}
              次へ進む

  -# フッターを呼び込み
  = render "items/subfooter"
