-#header部分
%header.user-container
  .user-header
    %h1.user-header__head
      = link_to root_path,class: "user-header__head__link" do
        = image_tag "fmarket_logo_red.svg", alt: "frima"
    %nav.user-header__nav
      %ol.user-header__nav__ol
        %li.through.user-header__nav__ol__progress
          会員情報
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          電話番号認証
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          お届け先住所入力
          .user-header__nav__ol__progress__li
        %li.active.user-header__nav__ol__progress
          支払い方法
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          完了
          .user-header__nav__ol__progress__li
-# クレジットカード入力フォーム
.steppage
  .MemberInformationInput
    .MemberInformationInput__title
      支払い方法
    .MemberInformationInput__content
      .MemberInformationInput__content--form
        = form_for @card do |f|
          = render "devise/shared/error_messages", resource: @card
          .field
            = f.label :カード番号
            %span.form_require
              必須
            %br/
            = f.text_field :card_number, placeholder: "半角数字のみ", class: "input_default"
              -# クレジットカード有効期限
              -# 内部実装してないため使えません。実装後こちら使用
              != sprintf(f.date_select(:expiration_date,with_css_classes:'XXXXX', order:[:month,:year,:day], use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月') + '年'
          .form_group
            %label
              有効期限
            %span.form_require
              必須
            %div

          %input{:name => "name", :type => "number", :class => "input_default  input_default--harf", :placeholder => "半角数字のみ"}/
          != sprintf(f.date_select(:expiration_date,with_css_classes:'XXXXX', order:[:month,:year,:day], use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月') + '年'
          %select#select_month{name: "month"}
          %span
            月
          %br
          %select#select_year{name: "year"}
          %span
            年

          .field
            = f.label :セキュリティコード
            %span.form_require
              必須
            %br/
            = f.text_field :security_number, placeholder: "カード背面4桁もしくは3桁の番号", class: "input_default"
          .actions
            = f.submit "次へ進む", class: "btn_red"

  -# フッターを呼び込み
  = render "items/subfooter"



